@model IEnumerable<UserViewModel>

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-4">
                    <button class="btn btn-primary">
                        <a asp-action="Create" style="text-align:center; color:white;">Dodaj</a>
                    </button>
                </div>
                <div class="col-sm-4" style="text-align:center">
                    <h1>Przypisz role:</h1>
                </div>
                <div class="col-sm-4" style="text-align:right">
                    <button class="btn btn-secondary" onclick="goBack()">Wróć</button>
                </div>
            </div>
        </div>
    </section>

    <div class="card">
        <!-- /.card-header -->
        <div class="card-body">
            <br />
            <br />
            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            Imię
                        </th>
                        <th>
                            Naziwsko
                        </th>
                        <th>
                            Rola
                        </th>
                        <th style="width:300px">Przypisz role</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
@*                                @Html.Raw(item.FirstName + " " + item.LastName)
*@                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @item.Role
                            </td>
                            <td>
                                <a class="assignrole" title="Przypisz role" asp-action="AssignRole" asp-route-id="@item.Id"><i class="material-icons" style="color: #FFC107">&#xE254;</i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />
<script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
<script type="text/javascript">
    $('#example').DataTable({
        language: {
            search: "Wyszukaj",
            "paginate": {
                "first": "Pierwsza",
                "last": "Ostatnia",
                "next": "Następna",
                "previous": "Poprzednia"
            },
            "zeroRecords": "Nie znaleziono pasujących rekordów",
            "info": "Wyświetlono _START_ do _END_ z _TOTAL_ rekordów",
            "infoEmpty": "Wyświetlono 0 rekordów",
            "infoFiltered": "(filtrowano z _MAX_ rekordów)",
            info: "Wyświetl _START_ do _END_ z _TOTAL_ elementów",
            lengthMenu: "Wyświetl _MENU_ elementów"
        }
    });
</script>
<script>
    function goBack() {
        window.history.back();
    }
</script>




