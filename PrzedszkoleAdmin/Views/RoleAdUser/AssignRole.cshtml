@model AssignRoleViewModel

<h2>Przypisz role dla użytkownika @Model.UserName</h2>

<form asp-action="AssignRole">
    <div class="form-group">
        <label for="Role">Wybierz role:</label>
        <select asp-for="Role" asp-items="@Model.Roles" class="form-control">
            <option value="">-- Rola --</option>
        </select>
    </div>
    <input type="hidden" asp-for="UserId" />
    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a asp-controller="RoleAdUser" asp-action="Index" class="btn btn-secondary">Wróć</a>
</form>