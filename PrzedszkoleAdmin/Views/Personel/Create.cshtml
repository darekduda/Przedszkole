@model PrzedszkoleData.Data.CMS.Personel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>Personel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stanowsiko" class="control-label"></label>
                <input asp-for="Stanowsiko" class="form-control" />
                <span asp-validation-for="Stanowsiko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="form-label" for="ProfilePicture">Profile picture</label><br />
                <input type="file" name="profilePicture" accept="image/jpeg,image/png,image/gif">
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}