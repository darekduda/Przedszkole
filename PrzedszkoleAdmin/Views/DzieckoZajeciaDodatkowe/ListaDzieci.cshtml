@model List<PrzedszkoleAdmin.Models.ListaDzieciViewModel>

<h2>Lista Dzieci</h2>

<table class="table">
    <thead>
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Przypisane Zajęcia</th>
            <th>Łączny Koszt Zajęć</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dziecko in Model)
        {
            <tr>
                <td>@dziecko.Imie</td>
                <td>@dziecko.Nazwisko</td>
                <td>
                    <ul>
                        @foreach (var zajecie in dziecko.PrzypisaneZajecia)
                        {
                            <li>@zajecie.Tytul - Cena: @zajecie.Cena</li>
                        }
                    </ul>
                </td>
                <td>@dziecko.LacznyKosztZajec</td>
            </tr>
        }
    </tbody>
</table>