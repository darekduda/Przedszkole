@model PrzedszkoleAdmin.Models.PrzypiszZajeciaDodatkoweViewModel

<h2>Przypisz Zajęcia Dodatkowe dla dziecka: @Model.Imie @Model.Nazwisko</h2>

@using (Html.BeginForm())
{
        <div class="form-group">
            <label>Wybierz zajęcia dodatkowe:</label>
            <br />
        @foreach (var zajecie in Model.DostepneZajecia)
        {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="WybraneZajecia" value="@zajecie.Id" @(Model.WybraneZajecia.Contains(zajecie.Id) ? "checked" : "")>
                        <label class="form-check-label">@zajecie.Tytul</label>
                    </div>
        }
        </div>

        <button type="submit" class="btn btn-primary">Zapisz</button>
}

@section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.7.0/dist/js/bootstrap.min.js"></script>
}